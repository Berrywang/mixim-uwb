# makefrag for include directory of the Mobility Framework
#
# this file automatically gets inserted into Makefiles generated by opp_makemake

# header and .ned files for the include directory
COREDIRS := ../basicModules ../channelControl ../utils ../basicMessages ../blackboard

MFCHEADERS = $(foreach dir,$(COREDIRS),$(wildcard $(dir)/*.h))
MFCNEDS = $(foreach dir,$(COREDIRS),$(wildcard $(dir)/*.ned))

# default target
all: core

# copy core header and ned files
core:
	@cp $(MFCHEADERS) .
	@cp $(MFCNEDS) .
	@echo >.tstamp

# remove all header and ned files
rm:
	rm -f *.h *.ned

# make clean depend on rm
clean: rm
