# makefrag for include directory of the Mobility Framework
#
# this file automatically gets inserted into Makefiles generated by opp_makemake

# header and .ned files for the include directory
CONTRIBDIRS := ../applLayer ../mobility ../nic ../nic/phyLayer ../nic/radios ../nic/macLayer ../messages ../netwLayer ../utils

CONTRIBHEADERS = $(foreach dir,$(CONTRIBDIRS),$(wildcard $(dir)/*.h))
CONTRIBNEDS = $(foreach dir,$(CONTRIBDIRS),$(wildcard $(dir)/*.ned))

# default target
all: contrib

# copy core header and ned files
contrib:
	@cp $(CONTRIBHEADERS) .
	@cp $(CONTRIBNEDS) .
	@echo >.tstamp

# remove all header and ned files
rm:
	rm -f *.h *.ned

# make clean depend on rm
clean: rm
